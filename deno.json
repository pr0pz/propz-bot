{
	"version": "1.6.5",
	"nodeModulesDir": "auto",
	"fmt": {
		"singleQuote": true,
		"useTabs": true,
		"exclude": [
			"*/*.json"
		]
	},
	"lint": {
		"include": [
			"./twitch-bot",
			"./local-scripts",
			"./obs-overlays",
			"./shared"
		]
	},
	"workspace": [
		"./twitch-bot",
		"./local-scripts",
		"./obs-overlays",
		"./shared"
	],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxFactory": "React.createElement",
		"jsxFragmentFactory": "React.Fragment",
		"jsxImportSource": "npm:react",
		"jsxImportSourceTypes": "npm:@types/react",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"deno.ns"
		]
	},
	"tasks": {
		"bot": "deno run -A --unstable-cron --env-file ./twitch-bot/index.ts dev",
		"botwatch": "deno run -A --unstable-cron --env-file --watch-exclude='./twitch-bot/*/*.json' --watch ./twitch-bot/index.ts dev",
		"botdebug": "deno run --inspect-wait -A --unstable-cron --env-file --watch-exclude='./twitch-bot/*/*.json' ./twitch-bot/index.ts dev",
		"local": "deno run -A --env-file --watch ./local-scripts/index.ts",
		"dev": "deno run -A --env-file --watch='./obs-overlays/src/' --watch='./shared/' ./obs-overlays/dev.ts",
		"build": "deno run -A --env-file ./obs-overlays/build.ts"
	},
	"imports": {
		"@propz/": "./shared/"
	}
}
