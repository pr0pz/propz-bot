{
	"version": "2.0.0",
	"nodeModulesDir": "auto",
	"fmt": {
		"singleQuote": true,
		"useTabs": true,
		"exclude": [
			"*/*.json"
		]
	},
	"lint": {
		"include": [
			"./bot",
			"./frontend",
			"./local",
			"./shared"
		]
	},
	"workspace": [
		"./bot",
		"./frontend",
		"./local",
		"./shared"
	],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxFactory": "React.createElement",
		"jsxFragmentFactory": "React.Fragment",
		"jsxImportSource": "npm:react",
		"jsxImportSourceTypes": "npm:@types/react",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"deno.ns"
		]
	},
	"tasks": {
		"bot": "deno run -A --unstable-cron --unstable-detect-cjs --env-file ./bot/index.ts dev",
		"botwatch": "deno run -A --unstable-cron --unstable-detect-cjs --env-file --watch-exclude='./bot/*/*.json' --watch ./bot/index.ts dev",
		"botdebug": "deno run --inspect=127.0.0.1:9229 -A --unstable-cron --unstable-detect-cjs --env-file --watch-exclude='./bot/*/*.json' ./bot/index.ts dev",
		"local": "deno run -A --env-file --watch ./local/index.ts",
		"dev": "deno run -A --env-file --watch='./frontend/src/' --watch='./shared/' ./frontend/dev.ts",
		"build": "deno run -A --env-file ./frontend/build.ts"
	},
	"imports": {
		"@services/": "./bot/services/",
		"@config/": "./bot/config/",
		"@discord/": "./bot/discord/",
		"@modules/": "./bot/modules/",
		"@features/": "./bot/modules/features/",
		"@integrations/": "./bot/modules/integrations/",
		"@shared/": "./shared/",
		"@twitch/": "./bot/twitch/",
		"@twitch/core/": "./bot/twitch/core/",
		"@twitch/chat/": "./bot/twitch/chat/",
		"@twitch/commands/": "./bot/twitch/commands/",
		"@twitch/events/": "./bot/twitch/events/",
		"@twitch/utils/": "./bot/twitch/utils/"
	}
}
